div
  h2(app-endpoints-details-toc-anchor="Resource Information") Resource Information
  div
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="API Version")
        span Endpoint Version
        div(data-tribe-text,
            data-on-edit-mode-on="onEditModeOn(uniqueId)",
            data-on-edit-mode-off="onEditModeOff(uniqueId)",
            data-value="endpoint.operation['x-tribestream-api-registry'].apiVersion")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Status")
        span Status
        div(data-tribe-singleselect,
            data-on-edit-mode-on="onEditModeOn(uniqueId)",
            data-on-edit-mode-off="onEditModeOff(uniqueId)",
            data-selected-option="endpoint.operation['x-tribestream-api-registry'].status",
            data-available-options="statusOptions")
    div
      div
        span Environment
        div(data-tribe-text,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-value="endpoint.operation['x-tribestream-api-registry'].environment")
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="Request formats")
        span Request formats
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-auto-show-options="true" data-available-options="requestFormatsOptions", data-selected-options="endpoint.operation.consumes")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Response formats")
        span Response formats
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-available-options="responseFormatsOptions", data-selected-options="endpoint.operation.produces")
    div
      div.auth-method(data-submenu="true", app-endpoints-details-toc-anchor="Authentication method")
        span Authentication method
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-available-options="['basic', 'form', 'digest', 'HTTP Signatures', 'Bearer']",
          data-selected-options="endpoint.operation['x-tribestream-api-registry']['auth-methods']")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Roles")
        span Roles
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-selected-options="endpoint.operation['x-tribestream-api-registry'].roles", data-available-options="[]")
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="Categories")
        span Categories
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-selected-options="endpoint.operation['x-tribestream-api-registry'].categories", data-available-options="[]")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Tags")
        span Tags
        div(data-tribe-multiselect,
          data-on-edit-mode-on="onEditModeOn(uniqueId)",
          data-on-edit-mode-off="onEditModeOff(uniqueId)",
          data-selected-options="endpoint.operation.tags", data-available-options="[]")
  .app-rates(data-submenu="true", app-endpoints-details-toc-anchor="Rates")
    div
      span Rate Limit
      div(x-ng-click="addRate()", tabindex=0).tribe-add-btn
        i.fa.fa-plus
    .rates(x-ng-repeat="rl in endpoint.operation['x-tribestream-api-registry'].rates")
      div(data-tribe-editable-number, data-placeholder="Limit", data-value="rl.rateLimit")
      span requests /
      div(data-tribe-editable-number, data-placeholder="Window", data-value="rl.rateWindow")
      div(data-tribe-singleselect, data-disable-actions="true", data-placeholder="Time", data-selected-option="rl.rateUnit", data-available-options="rateUnits")
      div(data-tribe-editable-text, data-placeholder="Description", data-value="rl.description")
      div(x-ng-click="removeRate(rl)")
        i.fa.fa-trash
