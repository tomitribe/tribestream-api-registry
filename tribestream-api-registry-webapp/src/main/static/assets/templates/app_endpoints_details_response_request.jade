div
  .expected
    h2 Expected values
      div(x-ng-click="addExpectedValue();")
        i.fa.fa-plus
    table(x-ng-if="endpoint.expectedValues && endpoint.expectedValues.length")
      thead
        tr
          th Attribute
          th Data Type
          th Expected Values
          th Description
          th
      tbody
        tr(x-ng-repeat="val in endpoint.expectedValues")
          td
            i(data-tribe-editable-text, data-empty-text="not set", data-adjust="false", data-value="val.name")
          td
            i(data-tribe-editable-text, data-empty-text="not set", data-adjust="false", data-value="val.type")
          td
            i(data-tribe-editable-block, data-empty-text="not set", data-content="val.values")
          td
            i(data-tribe-editable-block, data-empty-text="not set", data-content="val.description")
          td
            div(x-ng-click="removeExpectedValue(val);")
              i.fa.fa-trash-o
  .values
    h2 Response codes
      div(x-ng-click="addErrorCode();", app-endpoints-details-toc-anchor="Response codes")
        i.fa.fa-plus
    table(x-ng-if="endpoint.operation['x-tribestream-api-registry'] && endpoint.operation['x-tribestream-api-registry']['response-codes'] && endpoint.operation['x-tribestream-api-registry']['response-codes'].length")
      thead
        tr
          th HTTP Status
          th Error Code
          th Message
          th Description
          th
      tbody
        tr(x-ng-repeat="val in endpoint.operation['x-tribestream-api-registry']['response-codes'] | orderBy:'http_status'")
          td
            i(data-tribe-editable-text, data-adjust="false", data-value="val.http_status")
          td
            i(data-tribe-editable-text, data-adjust="false", data-value="val.error_code")
          td
            i(data-tribe-editable-block, data-content="val.message")
          td
            i(data-tribe-editable-block, data-content="val.description")
          td
            div(x-ng-click="removeErrorCode(val);")
              i.fa.fa-trash-o
  .resp-body
    h2 Request Body
    div(data-tribe-editable-block, data-content="endpoint.respBody")
  .samples
    h2 Samples
    h3 Request Headers
    div(data-tribe-editable-block, data-content="endpoint.samples.responseHeaders")
    h3 Response Parameters
    div(data-tribe-editable-block, data-content="endpoint.samples.responseParameters")
    h3 Response Body
    div(data-tribe-editable-block, data-content="exampleResponseXml")
    h3 Response Body Error
    div(data-tribe-editable-block, data-content="errorResponseXml")
